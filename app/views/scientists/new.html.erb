<h1>Add a New Scientist</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error|%>
<%= error %><br>
<% end %>
<% end %>

<%= form_for @scientist do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :field_of_study %>
<%= f.text_field :field_of_study %><br>

<%= f.submit %>

<% end %>